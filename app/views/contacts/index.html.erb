<section class="content-header">
  <h1>
    Dashboard
    <small>Contacts</small>
  </h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Listing Contacts</h3>
          <div class="box-tools">
            <div class="input-group">
              <%= link_to '<i class="fa fa-plus"></i> Add Contact'.html_safe, new_contact_path, class: "btn btn-success", "data-toggle": "modal", "data-target": "#contact", remote: true%>
            </div>
          </div>
        </div><!-- /.box-header -->
        <br>

        <div class="box-body table-responsive no-padding">
          <table class="table table-hover table-bordered">
            <tbody><tr>
              <th>Name</th>
              <th>Number</th>
              <th>Logo</th>
              <th>Actions</th>
            </tr>
            <%@contacts.each do |contact|%>
              <tr>
                <td><%= contact.name %></td>
                <td><%= contact.number %></td>
                <td><%=image_tag contact.logo.url(:thumb) %></td>
                <td>
                <%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-xs btn-warning", "data-toggle": "modal", "data-target": "#contact", remote: true%>
                <%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
              </tr>
            <%end%>
            <%if @contacts.count < 1%>
            <tr>
              <td colspan="4" class="box-title"><h3>You don not have any Contacts yet. Add some</h3></td>
            </tr>
            <%end%>
          </tbody></table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>
  </div>
</section>


<div id="contact" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit Contact</h4>
      </div>
      <div class="modal-body form">
        <p>Hello World</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>

  </div>
</div>
